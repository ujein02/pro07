<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC 
"-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="notice">
	<select id="noticeList" resultType="kr.go.me.dto.NoticeDTO">
		select * from notice
	</select>
	<select id="getNotice" resultType="kr.go.me.dto.NoticeDTO">
		select * from notice where tno=#{tno}
	</select>
	<insert id="addNotice">
		insert into notice(tno, title, content, writer, regdate, visited) values (noti_seq.nextval, #{title}, #{content}, 'admin', sysdate, 0)
	</insert>

</mapper>
